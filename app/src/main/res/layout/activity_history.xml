<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <Button
        android:id="@+id/btnDeleteRecords"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_below="@+id/layoutBMIList"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginStart="34dp"
        android:onClick="clickDeleteRecords"
        android:text="Delete"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/btnReturnToMenu"
        app:layout_constraintEnd_toEndOf="@+id/btnReturnToMenu"
        app:layout_constraintStart_toEndOf="@+id/txtHeaderDate" />

    <Button
        android:id="@+id/btnReturnToMenu"
        android:layout_width="199dp"
        android:layout_height="54dp"
        android:layout_alignLeft="@+id/btnDeleteRecords"
        android:layout_alignStart="@+id/btnDeleteRecords"
        android:layout_below="@+id/btnDeleteRecords"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:onClick="clickReturnToMenu"
        android:text="Return To Menu"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txtHeaderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtHeaderBMI"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="Date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHeaderHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnDeleteRecords"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btnDeleteRecords"
        android:layout_marginEnd="75dp"
        android:layout_marginLeft="73dp"
        android:layout_marginRight="75dp"
        android:layout_marginStart="73dp"
        android:layout_weight="1"
        android:text="Height"
        app:layout_constraintEnd_toStartOf="@+id/txtHeaderWeight"
        app:layout_constraintStart_toStartOf="@+id/txtHeaderDate"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHeaderWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="137dp"
        android:layout_marginRight="137dp"
        android:layout_weight="1"
        android:text="Weight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtHeaderBMI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnDeleteRecords"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnDeleteRecords"
        android:layout_marginEnd="62dp"
        android:layout_marginRight="62dp"
        android:layout_weight="1"
        android:text="BMI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/layoutBMIList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHeaderDate"
        android:layout_marginBottom="57dp"
        android:layout_marginTop="54dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDeleteRecords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>